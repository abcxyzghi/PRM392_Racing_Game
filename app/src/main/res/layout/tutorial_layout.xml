<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tutorial_bg">

    <RelativeLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"

            android:fontFamily="monospace"
            android:text="Tutorial"
            android:textColor="#FF3030"
            android:textSize="60sp"
            android:textStyle="bold" />


        <View
            android:id="@+id/view"
            android:layout_width="333dp"
            android:layout_height="444dp"
            android:layout_below="@id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:background="#36000000" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="1. Choose a car..\n2. Enter the bet amount.\n3. Start the race.\n4. You can reset to play again."
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/tvClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_gradient_border"
            android:clickable="true"
            android:fontFamily="monospace"
            android:padding="10dp"
            android:text="Close"
            android:textColor="#EF5F5D5D"
            android:textSize="30sp"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>